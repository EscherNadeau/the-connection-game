{
  "name": "connect-the-stars",
  "version": "1.0.0",
  "description": "A movie/TV connection game built with Vue",
  "main": "index.js",
  "scripts": {
    "dev": "vite",
    "dev:host": "vite --host 0.0.0.0 --port 3000",
    "server": "node server/game-server.js",
    "server:watch": "nodemon server/game-server.js",
    "build": "vite build",
    "build:check": "echo 'Skipping TypeScript type checking for production build'",
    "preview": "vite preview",
    "lint": "eslint \"src/**/*.{js,ts,vue}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,vue}\" --fix",
    "type-check": "vue-tsc --noEmit",
    "format": "prettier --write \"**/*.{js,ts,vue,json,md}\"",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "lint-staged": {
    "*.{js,ts,vue,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.86.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "jszip": "^3.10.1",
    "pinia": "2.3.1",
    "qrcode": "^1.5.4",
    "vue": "^3.3.4",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitest/coverage-v8": "^4.0.14",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-vue": "^9.33.0",
    "happy-dom": "^20.0.11",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "vite": "^4.4.5",
    "vitest": "^4.0.14",
    "vue-tsc": "^3.1.1"
  }
}
